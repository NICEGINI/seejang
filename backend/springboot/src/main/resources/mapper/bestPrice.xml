<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.pjt1.repository.mapper.MyProductMapper">

	<select id="selectBestPriceByProductNo" resultType="bestProduct" parameterType="int">
		select * 
		from best_price
		where product_no = #{productNo}
	</select>

	<select id="selectCountBestPrice" resultType="int" parameterType="int">
		select count(*) 
		from best_price
		where product_no = #{productNo}
	</select>

	<insert id="insertBestPrice" parameterType="bestProduct">
		insert 
		into best_price
		values(#{productNo}, #{siteName}, #{productName}, #{price}, #{link})
	</insert>
	
	<delete id="deleteBestPriceByProductNo" parameterType="int">
		delete 
		from best_price 
		where product_no = #{productNo}
	</delete>

</mapper>