<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.pjt1.repository.mapper.ProductReviewMapper">
	<select id="selectProductReviewByProductNo" resultType="ProductReview" parameterType="int">
		select *
		from product_review
		where product_no = #{productNo}
	</select>
	<insert id="insertProductReviewByProductNo" parameterType="ProductReview">
		INSERT INTO product_review (product_no, member_id, member_name, score, comment, regdate ) VALUES (#{productNo}, #{memberId}, #{memberName}, #{score}, #{comment}, #{date})
	</insert>
	<update id="updateProductReviewByProductNo" parameterType="ProductReview">
		UPDATE product_review SET comment = #{comment} WHERE comment_id = #{commentId}
	</update>
	<delete id="deleteProductReviewByProductNo" parameterType="int">
		delete from product_review where comment_no = #{commentNo}
	</delete>

</mapper>